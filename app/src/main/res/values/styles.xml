<resources xmlns:android="http://schemas.android.com/tools">

    <!--bottom navigation view-->
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/avenir_medium</item>
    </style>

    <!--language switch-->
    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/lightBlue</item>
    </style>

    <!--input EditTexts-->
    <style name="Input">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <!-- text input color e.g. email/password -->
        <item name="colorAccent">@color/dukeBlue</item>
        <!-- color of hint when activated/raised and line color -->
        <item name="colorControlActivated">@color/dukeBlue</item>
    </style>

    <style name="AlertCalendarHeader">
        <item name="android:textColor">@color/dukeBlue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
    </style>

    <style name="AlertCalendarWeek">
        <item name="android:textColor">@color/dukeBlue</item>
        <item name="android:fontFamily">@font/avenir_heavy</item>
    </style>

    <style name="AlertCalendarDate">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@drawable/calendar_day_color</item>
    </style>

</resources>
