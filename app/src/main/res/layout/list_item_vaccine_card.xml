<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vaccine_card_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Vaccine Name"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="28dp"
            android:layout_margin="5dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/vaccine_card_given_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/vaccine_card_given_text"
                    />
                <TextView
                    android:id="@+id/vaccine_card_given_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="9"
                    />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/vaccine_card_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="250dp"
                android:maxWidth="250dp"
                android:minHeight="50dp"
                android:maxHeight="50dp"
                android:layout_margin="30dp"
                android:layout_gravity="center"
                style="@android:style/Widget.ProgressBar.Horizontal"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/vaccine_card_goal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="@string/vaccine_card_goal_text"
                    />
                <TextView
                    android:id="@+id/vaccine_card_goal_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="12"
                    />
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>





</LinearLayout>