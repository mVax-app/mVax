<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record_detail_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/page_margin_end"
    android:layout_marginStart="@dimen/page_margin_start"
    android:background="@color/base"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/field"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:fontFamily="@font/avenir_medium"
        android:labelFor="@+id/value"
        android:padding="5dp"
        android:textColor="@color/dukeBlue"
        android:textSize="@dimen/text_size_body" />

    <mhealth.mvax.utilities.WatcherEditText
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fontFamily="@font/avenir_medium"
        android:inputType="textCapWords|textNoSuggestions"
        android:singleLine="true"
        android:textAlignment="viewEnd"
        android:textColor="@color/darkGray"
        android:textColorHint="@color/lightGray"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textSize="@dimen/text_size_body" />

</LinearLayout>