<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base">

    <LinearLayout
        android:id="@+id/email_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/modal_margin_end"
            android:layout_marginStart="@dimen/modal_margin_start"
            android:layout_marginTop="@dimen/modal_margin_top"
            android:fontFamily="@font/avenir_medium"
            android:text="@string/change_email_modal_subtitle"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/text_size_modal_body" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/modal_margin_end"
            android:layout_marginStart="@dimen/modal_margin_start"
            android:layout_marginTop="5dp"
            android:hint="@string/change_email_modal_hint"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/text_size_modal_body"
            android:theme="@style/Input" />

        <EditText
            android:id="@+id/email_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/modal_margin_end"
            android:layout_marginStart="@dimen/modal_margin_start"
            android:layout_marginTop="1dp"
            android:hint="@string/change_email_modal_hint_confirm"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/text_size_modal_body"
            android:theme="@style/Input" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/spinner"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
