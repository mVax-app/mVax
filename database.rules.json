{
  "rules": {
    "config" : {
      "algolia": {
        ".read": "auth != null",
        ".write": "false"
      },
      "mail": {
        ".read": "true",
        ".write": "false"
      },
      "admin": {
        ".read": "true",
        ".write": "false"
      }
    },
    "data": {
      ".read": "auth != null",
      ".write": "auth != null",
      "vaccinations": {
        ".indexOn": ["patientDatabaseKey", "date"]
      },
      "dueDates": {
        ".indexOn": "patientDatabaseKey"
      }
    },
    "users": {
      ".write": "root.child('users').child(auth.uid).child('role').val() == 'ADMIN'",
      "$uid": {
        "email": {
          ".write": "$uid === auth.uid"
        }
      },
      ".read": "root.child('users').child(auth.uid).child('role').val() == 'ADMIN'"
    },
    "requests": {
      ".read": "root.child('users').child(auth.uid).child('role').val() == 'ADMIN'",
      ".write": "true"
    }
  }
}